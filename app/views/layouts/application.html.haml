!!! strict
%html
  %head
    %title= 'Sevastopol Ruby on Rails developers'
    = javascript_include_tag :defaults
    = stylesheet_link_tag "formtastic", "formtastic_changes", "style"
    = yield :head
  %body{ :class => controller.controller_path.gsub('/', ' ') + ' ' + params[:action] }
    #header
      .logo I do webdev ;)
      %ul.menu
        %li= link_to 'Home', root_path
        %li= link_to "My Profile", account_path if current_user
        %li= link_to 'Logout', user_session_path, :method => :delete if current_user
        %li= link_to 'Login', new_user_session_path unless current_user
        %li= link_to 'Register', new_user_path unless current_user
    %ul#main_menu.menu
      %li= link_to 'Events', events_path
    #content
      = show_flash
      = yield
    #footer