!!! strict
%html
  %head
    %title= 'Sevastopol Ruby on Rails developers'
    = javascript_include_tag :defaults, "facebox"
    = stylesheet_link_tag "formtastic", "formtastic_changes", "style", "facebox"
    = yield :head
  %body{ :class => controller.controller_path.gsub('/', ' ') + ' ' + params[:action] }
    #header
      .logo=link_to 'I do webdev ;)', root_path
      .menu
        - if current_user
          #logged_in_as&= current_user.login
        - else
          #vk_login{:onclick => "doLogin();"}
    %ul#main_menu.menu
      %li=link_to t ('.events'), events_path
      %li=link_to t '.jobs'
      %li=link_to t ('.talks'), talks_path
    #content
      = show_flash
      = yield
    //#rails_powered
    //  =link_to image_tag('rails.png'), 'http://rubyonrails.org'
    #footer
    = javascript_include_tag "http://vkontakte.ru/js/api/openapi.js", :charset => "windows-1251"
    = javascript_include_tag "vk"
    