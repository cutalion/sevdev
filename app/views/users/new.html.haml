%h1=t '.register'

- semantic_form_for @user, :url => account_path do |f|
  = f.semantic_errors
  - f.inputs do
    = f.input :login, :label => t('.login')
    = f.input :email, :label => t('.email')
    = f.input :password, :label => t('.password')
    = f.input :password_confirmation, :label => t('.password_confirmation')
  - f.buttons do
    = f.commit_button :button_html => { :value => t('.registrate') }